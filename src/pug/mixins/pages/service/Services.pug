mixin ServiceItem(config, galleryConfig)
  .col-sm-6.col-lg-4(data-zanim-timeline!={} data-zanim-trigger="scroll").thumbnail-grid-item
    .overflow-hidden
      .service-item.p-3.p-md-4.h-100(data-bs-toggle='collapse' data-bs-target=`#${config.id}` aria-expanded='false' aria-controls=`${config.id}`)
        .overflow-hidden
          .px-4(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay}`})
            img(src=`${CWD}assets/img/line-icons/icons/${config.img}.svg` alt='').service-icon
        .overflow-hidden
          h5.fw-normal.ls-3.mb-2(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay + 0.1}`})=config.title
        .overflow-hidden
          p.fw-normal(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay + 0.2}`})!=config.description
    .position-absolute.start-0
      .collapse.thumbnail-grid-content( data-bs-parent="#selector" id=`${config.id}`)
        .card.card-body.border-0.bg-100.m-1.px-4
          +GalleryContent(galleryConfig)
              
mixin Services(title)
  +Section.text-center&attributes(attributes)
    if title
      .row.mb-4(data-zanim-timeline!={} data-zanim-trigger='scroll')
        .col
          .overflow-hidden
            h2.fs-md-5(data-zanim-xs!={'duration': 1.5,'delay': 0}) Our Services
          .overflow-hidden
            p.fs--1.text-uppercase.text-black.ls-1.mb-0(data-zanim-xs!={'duration': 1.5,'delay': 0.1}) The AI revolution is upon us - let us take your company into the new era
          .overflow-hidden
            hr.hr-short.bg-black.opacity-100(data-zanim-xs!={'duration': 1.5,'delay': 0.2})
    .row.g-2.position-relative.thumbnail-grid-container#selector
      +ServiceItem({
        id:'collapse-1',
        img: "black-bubble-speech", 
        title: "AI assistants", 
        description: 'Harness the latest LLM-powered AI assistants, custom-tailored for your company. With access to internal data and systems, our assistants provide personalized support for clients and employees 24/7.', 
