mixin GalleryContent(config)
  .row.align-items-center
    .thumbnail-grid-navigation
      a(href="#!").thumbnail-close
        i.fas.fa-times
      a(href='#!' data-grid-target=`#${config.prev}` data-thumbnail-grid-nav).thumbnail-grid-nav.prev
        i.fas.fa-angle-left
      a(href='#!' data-grid-target=`#${config.next}` data-thumbnail-grid-nav).thumbnail-grid-nav.next
        i.fas.fa-angle-right
    .col-4
      .d-none.d-lg-block.p-0
        img(src=`${CWD}assets/img/gallery/${config.image}` alt="").w-100.img-fluid.rounded
    .col-lg-8
      h5.ls-1=config.title
      p=config.text

mixin ServiceItem(config, galleryConfig)
  .col-sm-6.col-lg-4(data-zanim-timeline!={} data-zanim-trigger="scroll").thumbnail-grid-item
    #service-card.overflow-hidden
      .service-item.p-3.p-md-4.h-100(data-bs-toggle='collapse' data-bs-target=`#${config.id}` aria-expanded='false' aria-controls=`${config.id}`).thumbnail-gridder
        .overflow-hidden
          .px-4(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay}`})
            img(src=`${CWD}assets/img/line-icons/icons/${config.img}.svg` alt='').service-icon
        .overflow-hidden
          h5.fw-normal.ls-3.mb-2(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay + 0.1}`})=config.title
        .overflow-hidden
          p.fw-normal(data-zanim-xs!={'duration': 1.5,'delay': `${config.delay + 0.2}`})!=config.description
    .position-absolute.start-0
      .collapse.thumbnail-grid-content(data-bs-parent="#selector" id=`${config.id}`)
        .card.card-body.border-0.bg-100.m-1.px-4
          +GalleryContent(galleryConfig)
              
