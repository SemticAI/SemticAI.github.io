mixin GalleryContent(config)
  .row.align-items-center
    .thumbnail-grid-navigation
      a(href="#!").thumbnail-close
        i.fas.fa-times
      a(href='#!' data-grid-target=`#${config.prev}` data-thumbnail-grid-nav).thumbnail-grid-nav.prev
        i.fas.fa-angle-left
      a(href='#!' data-grid-target=`#${config.next}` data-thumbnail-grid-nav).thumbnail-grid-nav.next
        i.fas.fa-angle-right
    .col-7
      .d-none.d-lg-block.p-0
        img(src=`${CWD}assets/img/gallery/${config.image}` alt="").w-100.img-fluid.rounded
    .col-lg-5
      h5.ls-1=config.title
      p=config.text
      a(href="#!").btn.btn-outline-dark.btn-sm.hvr-sweep-top.hover-color-white.mt-2 Visit Website
