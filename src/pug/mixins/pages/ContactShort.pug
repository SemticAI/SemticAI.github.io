mixin ContactShort(language)
	if language == 'en'
		-
			var lang_versions = {
				'header': 'Connect With Us',
				'copy': 'We are happy to hear from you anytime'
			}
	else if language == 'pl'
		-
			var lang_versions = {
				'header': 'Skontaktuj się',
				'copy': 'Jesteśmy dostępni dla Ciebie o każdej porze'
			}
	+Section&attributes(attributes)#contact
		.row
			.col.text-center.mb-4(data-zanim-timeline!={} data-zanim-trigger="scroll")
				.overflow-hidden
					h2.fs-md-5(data-zanim-xs!={'duration': 1.5, 'delay': 0})= lang_versions['header']
				.overflow-hidden
					p.fs--1.text-uppercase.text-black.ls-1.mb-0(data-zanim-xs!={'duration': 1.5, 'delay': 0.1})= lang_versions['copy']
				.overflow-hidden
					hr.hr-short.border-black(data-zanim-xs!={'duration': 1.5, 'delay': 0.2})
		.row.justify-content-center
			.col-lg-12.mb-5.mb-lg-0.d-flex.flex-column.justify-content-between
				.col-12
					h5.mb-3.text-center 
				.row.justify-content-md-center
					.col-md-6.col-12.mb-4.mb-sm-0(style="width: 380px")
						.row.justify-content-center
							.col-1
								span.fas.fa-location-arrow.text-1100
							.col.px-2
								p.mb-1.text-1100
									strong #{name} Office
								p.mb-0.text-800
									| Karola Szymanowskiego 12/29
									br
									| 80-280, Gdańsk, Poland
					.col-md-6.col-12.mb-2.mb-sm-0(style="width: 205px")
						.row.mb-2.mb-sm-1.justify-content-center
							.col-1
								span.fas.fa-phone.me-2.text-1100 
							.col.px-2
								a(href="tel:+48514484319").text-800 +48 514 484 319
						.row.justify-content-center
							.col-1
								span.fas.fa-envelope.me-2.text-1100
							.col.px-2
								a(href="mailto:contact@semtic.ai").text-800 contact@semtic.ai

